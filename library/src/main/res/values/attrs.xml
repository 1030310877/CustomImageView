<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomImageView">
        <attr name="shape" format="enum">
            <enum name="normal" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="supportZoomGesture" format="boolean"/>
        <attr name="leftTop_cornerRadius" format="dimension"/>
        <attr name="leftBottom_cornerRadius" format="dimension"/>
        <attr name="rightTop_cornerRadius" format="dimension"/>
        <attr name="rightBottom_cornerRadius" format="dimension"/>
        <attr name="shadow_depth" format="dimension"/>
        <attr name="shadow_color" format="color"/>
        <attr name="shadow_mode">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
            <flag name="top" value="4"/>
            <flag name="bottom" value="8"/>
        </attr>
    </declare-styleable>
</resources>
